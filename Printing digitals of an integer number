#include <stdio.h>

int main()
 {
   int num, digit;

   printf("Enter a number: ");
   scanf("%d", &num);

   printf("The digits in %d are: ", num);
   while (num > 0) {
      digit = num % 10;  
      printf("%d ", digit);
      num = num / 10;    
   }

   return 0;
}
OUTPUT:
Enter a number: 456
The digits in 456 are: 6 5 4
