len='echo $str | wc-c'
len='expr $len-1'
count=0
i=1
while [$i-le $len]
do
	temp='echo $str | cut-c$si'
	if [$temp=$c]
	then
		new='echo $new $r'
	else
		new='echo $new $temp'
	fi
	i='expr $i+i'
done
echo "original string is $str"
echo "update string is $new"
